<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    style="?attr/bottomSheetStyle">

    <LinearLayout
        android:id="@+id/viewListTile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/likeListTile"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/faceIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_face"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/faceButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="View"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/faceIcon"
            app:layout_constraintStart_toEndOf="@id/faceIcon"
            app:layout_constraintBottom_toBottomOf="@id/faceIcon"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/likeListTile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/viewListTile"
        app:layout_constraintBottom_toTopOf="@id/deleteListTile"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/likeIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_thumb_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Like"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/likeIcon"
            app:layout_constraintStart_toEndOf="@id/likeIcon"
            app:layout_constraintBottom_toBottomOf="@id/likeIcon"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/deleteListTile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/likeListTile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/likeIcon"
            />

        <TextView
            android:id="@+id/removeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Remove"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/deleteIcon"
            app:layout_constraintStart_toEndOf="@id/deleteIcon"
            app:layout_constraintBottom_toBottomOf="@id/deleteIcon"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>